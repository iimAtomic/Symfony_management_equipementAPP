{% extends 'base.html.twig' %}

{% block title %}Hello FormulaireController!{% endblock %}

{% block body %}
    <head>
        <title>Bootstrap Exemple</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <style>

        .form-row {
            display: flex;
            flex-direction: column;
            gap: 1em;
            justify-content: center;
            align-items: center;
            
            
        }
       body{
        background-color:grey;
       }
        .form-row .formulaire button {
            border-radius: 10px;
            
            box-shadow: 5px 5px 15px 5px #000000;
        }

        .form-control{
            width:400px;
        }

    </style>


    <div class="form-row">
        {% if statut is defined %}
            <div class="alert alert-{{ statut }}" role="alert">
                {% if statut is same as("success") %}
                    Nouvel équipement ajouté avec succès
                {% else %}
                    {# exemple d'erreur : mettre les nombres avec un point et pas avec une virgule 40.00 #}
                    Une erreur s'est produite lors de l'enregistrement !essayez de mettre le prix avec une ","
                {% endif %}
            </div>
        {% endif %}

        <div class="formulaire">
            <form action="/formulaire/submit" method="post">
                <div class="col-md-4 mb-3">
                    <label for="nom">Nom</label>
                    <input type="text" class="form-control" id="nom" placeholder="Nom" name="nom" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="marque">Marque :</label>
                    <input type="text" class="form-control" id="marque" placeholder="Marque" name="marque">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="prix">Le prix :</label>
                    <input type="number" class="form-control" id="prix" name="prix" step="0.01" value="0.00" min="0">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="quantite">La quantité :</label>
                    <input type="number" id="quantite" class="form-control" name="quantite" step="1" value="0" min="0">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="description">Description :</label>
                    <textarea id="description" class="form-control" name="description" maxlength="1024"
                              rows="4"> </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div>
    </div>

{% endblock %}





